<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">
      <%= form_with(model: role) do |form| %>
        <% if role.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

            <ul>
              <% role.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <%= form.label :name,class:"col-2 col-form-label"%>
          <div class="col-5">
            <%= form.text_field :name,rows:4,class:"form-control shadow rounded",placeholder:"Enter Role Name",required: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description,class:"col-2 col-form-label"%>
          <div class="col-5">
            <%= form.text_area :description,rows:4,class:"form-control shadow rounded",placeholder:"Enter description" %>
          </div>
        </div>
        <div class="row">
          <div class="actions form-group offset-md-2 col-md-2 text-center">
            <%= form.submit class:"btn btn-success btn-lg"  %>
          </div>
          <div class="form-group  col-md-4  text-center">
            <%= link_to 'Cancel', :back,class:"btn btn-danger btn-lg" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
