<div class="container" style="overflow-x: auto;">
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Sl.no.</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <% if current_user.role.name=='superadmin' || current_user.role.name =='principal' %>
            <th scope="col" colspan="2" class=" text-center">Action</th>
        <% end %>
        </tr>
    </thead>
        <%@count=0%>
    <tbody>
        <% @teachers.each do |teacher| %>
            <%@count=@count+1%>
        <tr>
            <th scope="row"><%= @count%></th>
            <td><%= teacher.name %></td>
            <td><%= teacher.email %></td>
            <td><%= teacher.phn %></td>
            <% if current_user.role.name=='superadmin' || current_user.role.name =='principal' %>
                <td><%= link_to 'Show', teacher ,class:"btn btn-outline-success" %></td>
                <td><%= link_to 'Delete', teacher, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>