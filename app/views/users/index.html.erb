<div class="w-100 row align-items-center breadcrumbb ml-0 mb-5">
    <div class="offset-md-4 col-md-4 text-center">
          <h3 class="text-center mt-4">User Details </h3>
    </div>
    <div class="col-md-4 text-right"> 
        <span>
          <span class="breadcrumb-item"><%= link_to 'Home', root_path %></span>
            
		      <span class="breadcrumb-item"><%= link_to 'Create user', new_user_path %></span>
            
          <span class="breadcrumb-item active" aria-current="page">user Details</span>
        <span>
    </div>
 </div>

<div class="container">
	<table class="table">
		<thead>
			<tr>
        <th>Sl. No.</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        
          <th scope="col" colspan="3" class=" text-center">Action</th>
    
      </tr>
    </thead>

   <%@count=0%>
		<% @users.each do |user| %>
            <tbody>
                <%@count=@count+1%>
                <tr>
          <th scope="row"><%= @count%></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
           <td><%= user.role.name %></td>
          <td><%= link_to 'Show', user,class:"btn btn-outline-success" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-primary" %></td>
         
              <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
        
        </tr>
      <%end%>                      
    </tbody>
		
	</table>
			
</div>
<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>

